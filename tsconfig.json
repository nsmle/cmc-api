{
  "compilerOptions": {
    "lib": ["ES7"],
    "declaration": true,
    "esModuleInterop": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2017",
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": "./",
    "allowJs": false,
    "paths": {
      "@core/*": ["src/core/*"],
      "@response/*": ["src/responses/*"],
      "@repository/*": ["src/repositories/*"],
      "@option/*": ["src/types/*"],
      "@error/*": ["src/errors/*"],
      "@cmc/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "noUnusedLocals": true
  }
}
